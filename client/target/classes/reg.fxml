<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import java.net.URL?>
<VBox fx:controller="client.RegController"
      xmlns:fx="http://javafx.com/fxml" alignment="center">
    <stylesheets>
        <URL value="@/css/style.css"/>
    </stylesheets>


    <TextField fx:id="loginField" HBox.hgrow="ALWAYS" promptText="Логин"/>
    <PasswordField fx:id="passwordField" HBox.hgrow="ALWAYS" promptText="Пароль"/>
    <TextField fx:id="nicknameField" HBox.hgrow="ALWAYS" promptText="Ваше тия в чате"/>
    <TextArea fx:id="textArea" editable="false"/>


    <Button text="Зарегистрироваться" onAction="#tryToReg"/>


</VBox>